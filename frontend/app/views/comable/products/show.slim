#products
  ol.breadcrumb
    li
      = link_to 'Products', comable.products_path
    li
      = link_to 'Categories', comable.products_path
    li.active
      = @product.name

  section.images.col-sm-6
    / TODO: Add images...
    a href="#" class="thumbnail"
      img width='100%' alt="dummy" src="data:image/svg+xml;base64,"

  section.text.col-sm-6
    h1.name
      = @product.name
      small< = @product.code
    .caption
      = @product.caption
    .price
      = number_to_currency @product.price

    = form_tag comable.add_cart_path do
      - if @product.sku?
        .sku
          = sku_table @product, border: 1

      - if @product.unsold?
        .add_cart.form-inline.form-group
          = hidden_field_tag :product_id, @product.id
          = select_tag :quantity, options_for_select(1.upto(10).to_a)
          = submit_tag 'カートに入れる'
      - else
        .sold_out
          | 品切れ中
